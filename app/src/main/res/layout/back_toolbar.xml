<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.MaterialToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="?attr/colorPrimaryVariant">

    <ImageButton
        style="@style/Widget.EducationPlatform.IconButton"
        android:id="@+id/action_button"
        android:src="@drawable/ic_arrowiosback"/>

    <TextView
        style="@style/Widget.EducationPlatform.HeaderSecondTextView"
        android:id="@+id/registration_label"
        android:text="@string/registration_label"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_gravity="center"/>
</com.google.android.material.appbar.MaterialToolbar>